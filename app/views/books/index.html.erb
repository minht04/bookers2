<h1>User info</h1>


<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%=f.text_area :body %><br>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </tbody>
</table>

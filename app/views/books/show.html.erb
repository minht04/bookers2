<h1>User info</h1>
<table class="table-user">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </tbody>
</table>




<h1>New book</h1>
<%= form_with model: @new_book, local: true do |f| %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%=f.text_area :body %><br>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>

    <tr>
      <th><%= @book.title %></th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
      <th><%=link_to 'Edit', edit_book_path(@book) %></th>
      <th><%=link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %></th>
      <% end %>
    </tr>

  </tbody>
</table>


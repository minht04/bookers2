<h1>User info</h1>
<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table-user">
  <tbody>
    <tr>

    </tr>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if @user == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_book_path(@user) %></p>
<% else %>
  <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
<% end %>


<h1>New book</h1>
<%= form_with model: @new_book, local: true do |f| %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%=f.text_area :body %><br>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
        <br>
        <%= link_to @user.name, user_path(@user) %>
        </td>
      <td><%= link_to @book.title  %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%=link_to 'Edit', edit_book_path(@book) %></td>
      <td><%=link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

